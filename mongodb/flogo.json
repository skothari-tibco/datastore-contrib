{
  "name": "_APP_NAME_",
  "type": "flogo:app",
  "version": "0.0.1",
  "description": "Flogo application description",
  "appModel": "1.1.0",
  "imports": [
    "github.com/project-flogo/datastore-contrib/mongodb/trigger/mongodb",
    "github.com/project-flogo/contrib/activity/log",
    "github.com/project-flogo/flow@latest"
  ],
  "triggers": [
    {
      "id": "MongoDBTrigger",
      "ref": "github.com/project-flogo/datastore-contrib/mongodb/trigger/mongodb",
      "name": "mongodb-eventlistener",
      "description": "",
      "settings": {
        "connection": "conn://mongo-conn"
      },
      "handlers": [
        {
          "settings": {
            "databaseName": "sample",
            "collectionName": "test",
            "listenInsert": true,
            "listenUpdate": true,
            "listenRemove": true
          },
          "actions": [
            {
              "ref": "#flow",
              "settings": {
                "flowURI": "res://flow:simple_flow"
              }
            }
          ]
        }
      ]
    }
  ],
  "connections": {
    "mongo-conn": {
      "id": "mongo-conn",
      "name": "mc2",
      "ref": "github.com/project-flogo/datastore-contrib/mongodb/connection",
      "settings": {
        "name": "mc2",
        "description": "",
        "connectionURI": "",
        "username": "<Enter Username here in case of SCRAM-SHA-1 or SCRAM-SHA-256>",
        "password": ""

      }
    }
  },
  "resources": [
    {
      "id": "flow:simple_flow",
      "data": {
        "name": "simple_flow",
        "metadata": {
          "input": [
            { "name": "in", "type": "string",  "value": "test" }
          ],
          "output": [
            { "name": "out", "type": "string" }
          ]
        },
        "tasks": [
          {
            "id": "log",
            "name": "Log Message",
            "activity": {
              "ref": "#log",
              "input": {
                "message": "flow.in",
                "flowInfo": "false",
                "addToFlow": "false"
              }
            }
          }
        ],
        "links": []
      }
    }
  ]
}